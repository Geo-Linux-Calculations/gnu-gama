#
# builds dictionaris for GaMaLib
# 
# $Id: build-makefiles,v 1.2 2003/03/28 22:07:31 cepek Exp $


if pwd | grep /scripts$; then cd ..; fi


(cd scripts ; make -f Makefile-gnu_gama_dep)

echo
echo "Building makefiles     ... please wait"
echo


DEP=scripts/gnu_gama_dep

$DEP expat      gnu           > gamaprog/linux/lib/Makefile-expat
$DEP lib        gnu           > gamaprog/linux/lib/Makefile
$DEP gama-local gnu           > gamaprog/linux/gama-local/Makefile

$DEP expat      win32-borland > gamaprog/win32-borland/lib/Makefile-expat
$DEP lib        win32-borland > gamaprog/win32-borland/lib/Makefile
$DEP gama-local win32-borland > gamaprog/win32-borland/gama-local/Makefile

$DEP expat      win32-msvc    > gamaprog/win32-msvc/lib/Makefile-expat
$DEP lib        win32-msvc    > gamaprog/win32-msvc/lib/Makefile
$DEP gama-local win32-msvc    > gamaprog/win32-msvc/gama-local/Makefile

