FILES=../gamalib/ellipsoids.h ../gamalib/ellipsoids.cpp \
      ../xml/ellipsoids.html  ../doc/ellipsoids.texi 


all : $(FILES)

$(FILES) : ellipsoids_xml ../xml/ellipsoids.xml
	./ellipsoids_xml ../xml/ellipsoids.xml ../gamalib/
	@mv -v ../gamalib/ellipsoids.html ../xml
	@mv -v ../gamalib/ellipsoids.texi ../doc

ellipsoids_xml :  ellipsoids_xml.cpp Makefile-ellipsoids
	( pwd; cd ../gamaprog/linux/lib; make -f Makefile-expat ) 
	$(CXX) -I.. -c ellipsoids_xml.cpp ../gamalib/xml/encoding.cpp	
	$(CXX) -o ellipsoids_xml ellipsoids_xml.o encoding.o \
                ../gamaprog/linux/lib/gamalib.a

