CPAR=-Wall -pedantic -I../.. -g


demo : gkfparser.o ../../gamaprog/linux/lib/gamalib.a
	g++ -o demo gkfparser.o ../../gamaprog/linux/lib/gamalib.a

gkfparser.o : gkfparser.cpp gkfparser.h
	g++ $(CPAR) -DGaMaLib_GKFparser_demo -c gkfparser.cpp

clean:
	rm -f *.o *~ demo

archiv:
	( cd .. ; \
          tar czvf gkf-`date +%Y.%m.%d-%H.%M`.tgz gkf --exclude=demo \
                       --exclude=*.tgz --exclude=*.o --exclude=*~ ; )
	mv ../gkf-*.tgz .
